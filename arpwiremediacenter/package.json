{
  "name": "arpwiremediacenter",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "description": "fun media center for arpwire",
  "author": "Ocarin",
  "homepage": ".",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^3.0.1",
    "howler": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "electron .",
    "electron-pack": "electron-builder build --win --publish never",
    "dist": "electron-builder build --win",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm run start\" \"npm run electron-dev\"",
    "start-electron": "npm run build && electron ."
  },
  "build": {
    "appId": "com.arpwire.mediacenter",
    "productName": "ArpWire Media Center",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/media player components/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ArpWire Media Center"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
